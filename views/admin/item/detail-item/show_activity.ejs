<div
class="tab-pane fade"
id="show-activity"
>
<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-body">
    <div class="row">
      <div class="col-md-5">
        <form
          action="/admin/item/add/activity"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="modal-body">
            <div class="form-group">
              <label for="name">Name</label>
              <input
                type="text"
                class="form-control"
                name="activityName"
                id="activityName"
                placeholder="Enter Activity name"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">Type</label>
              <input
                type="text"
                class="form-control"
                name="type"
                id="type"
                placeholder="Enter Type"
                required
              />
            </div>
            <div class="form-group">
              <label for="name">image Url</label>
              <input
                type="file"
                class="form-control"
                name="image"
                id="image"
                placeholder="Enter activity image"
                required
              />
            </div>
            <input type="hidden" value="<%=itemId%>" name="itemId" />
            <button type="submit" class="btn btn-primary">Save</button>
          </div>
        </form>
      </div>
      <div class="col-md-7">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Type</th>
                <th>Image URL</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for(let i = 0; i < activity.length; i++) { %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= activity[i].name %></td>
                  <td><%= activity[i].qty %></td>
                  <td><img src="https://adm-space.herokuapp.com/<%= activity[i].imageUrl %>" alt="imageUrl" width="70px"/></td>
                  <td>
                    <form action="/admin/item/<%=itemId%>/activity/<%=activity[i].id%>?_method=DELETE" method="POST">
                      <a 
                        href="javascript:void()" 
                        type="button" 
                        data-id="<%=activity[i].id%>" 
                        data-type="<%=activity[i].type%>"
                        data-name="<%=activity[i].name%>"
                        class="btn btn-warning btn-sm btn-circle btn-update-activity"
                        ><i class="fa fa-edit"></i></a>
                      <button type="submit" class="btn btn-danger btn-sm btn-circle"><i class="fa fa-trash"></i></button>
                    </form>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
